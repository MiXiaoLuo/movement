/* pages/activity/activity.wxss */
.scroll-box {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  white-space: nowrap;
  border-bottom: 1px solid #f2f2f2;
}

.scroll-box view {
  display: inline-block;
  width: 168rpx;
  font-size: 30rpx;
  text-align: center;
}

.scroll-box view.on {
  color: #0391d7;
}

.details {
  position: relative;
  height: 400rpx;
  padding: 30rpx;
  border-bottom: 1px solid #e6eaec;
  background: #fff;
  overflow: hidden;
}

.details image {
  display: block;
  float: left;
  width: 300rpx;
  height: 400rpx;
}

.details view {
  float: left;
  width: 370rpx;
  margin: 0 0 20rpx 20rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #8b969a;
}

.details view:nth-child(2) {
  position: absolute;
  top: 52rpx;
  left: 10rpx;
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  background: #f68e43;
  color: white;
}

.details view:nth-child(3) {
  color: #6b6b6b;
  font-weight: bold;
  font-size: 36rpx;
  line-height: 48rpx;
  margin-bottom: 36rpx;
}

.details view text {
  font-size: 26rpx;
}

.details view:nth-child(4) text,
.details view:nth-child(5) text {
  display: block;
  float: right;
  width: 280rpx;
  line-height: 32rpx; 
}

.details view:nth-child(4) text{
  color: #8b969a;
}

.details view:nth-child(6) text {
  color: #f68e43;
}

.details view.hot {
  position: absolute;
  display: block;
  top: 0;
  right: 0;
  margin: 0;
  width: auto;
  color: #fff;
  font-size: 24rpx;
  border: 32rpx solid transparent;
  border-top-color: #0391d7; 
  border-right-color: #0391d7;
  z-index: 0;
}

.hot text {
  position: absolute;
  top: -30rpx;
  right: -30rpx;
  color: white;
  z-index: 30;
}